<config>

  <dataDir>target/solr-data/${solr.core.name}</dataDir>
  <directoryFactory name="DirectoryFactory"
                    class="${solr.directoryFactory:solr.NRTCachingDirectoryFactory}"/>
  <schemaFactory class="ClassicIndexSchemaFactory"/>
  <luceneMatchVersion>8.2.0</luceneMatchVersion>

  <updateHandler class="solr.DirectUpdateHandler2">
    <!-- reduce auto-commit -->
    <autoCommit>
      <maxDocs>-1</maxDocs>
    </autoCommit>
  </updateHandler>

  <query>
    <maxBooleanClauses>10024</maxBooleanClauses>
  </query>

  <requestHandler name="/select" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
      <str name="indent">true</str>
      <str name="df">text</str>
    </lst>
  </requestHandler>

  <queryParser name="idFilter" class="com.github.cheffe.solr.postfilter.IdFilterQParserPlugin"/>

</config>